{
    "name": "i18nifty",
    "version": "1.3.10",
    "description": "Type safe React i18n library",
    "homepage": "https://www.i18nifty.dev",
    "repository": {
        "type": "git",
        "url": "git://github.com/garronej/i18nifty.git"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "start_spa": "yarn yarn_link && cd src/test/apps/spa && yarn start",
        "start_ssr": "yarn yarn_link && cd src/test/apps/ssr && yarn dev",
        "start_spa-lazy": "yarn yarn_link && cd src/test/apps/spa-lazy && yarn start",
        "lint:check": "eslint . --ext .ts,.tsx",
        "lint": "yarn lint:check --fix",
        "_format": "prettier '**/*.{ts,tsx,json,md}'",
        "format": "yarn _format --write",
        "format:check": "yarn _format --list-different",
        "yarn_link": "ts-node src/bin/yarn_link.ts"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix"
        ],
        "*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged -v"
        }
    },
    "author": "u/garronej",
    "license": "MIT",
    "files": [
        "dist/",
        "!dist/test/",
        "!dist/bin/",
        "!dist/package.json",
        "!dist/tsconfig.tsbuildinfo"
    ],
    "keywords": [
        "i18n",
        "hooks",
        "react",
        "typescript"
    ],
    "peerDependencies": {
        "react": "^16.8.0 || ^17.0.2 || ^18.0.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        }
    },
    "dependencies": {
        "powerhooks": "^0.20.11",
        "tsafe": "^1.0.0"
    },
    "devDependencies": {
        "@types/node": "^16.11.38",
        "@types/react": "18.0.11",
        "@types/react-dom": "18.0.5",
        "@typescript-eslint/eslint-plugin": "^4.24.0",
        "@typescript-eslint/parser": "^4.24.0",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^4.3.8",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.0",
        "ts-node": "^10.2.1",
        "typescript": "^4.6.3",
        "next": "12.1.7-canary.4",
        "react": "18.1.0"
    }
}
